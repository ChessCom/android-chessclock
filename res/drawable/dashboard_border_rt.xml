<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<!--Outer stroke-->
	<item>
		<shape>
			<stroke
				android:width="1px"
				android:color="@color/dashboard_item_stroke_2"/>
			<solid android:color="@android:color/transparent" />
		</shape>
	</item>

	<!--Dashboard buttons divider -->
    <item
        android:bottom="1px"
        android:left="0px"
        android:right="1px"
        android:top="1px"
        >
        <shape
            android:dither="true"
            android:shape="rectangle">
            <solid android:color="@color/dashboard_item_default"/>

            <stroke
                android:width="1px"
                android:color="@color/dashboard_item_stroke"/>
        </shape>
    </item>

    <item
        android:bottom="1px"
        android:left="1px"
        android:right="2px"
        android:top="2px"
        android:id="@id/glow_layer"
        android:drawable="@drawable/dashboard_glow_rt"
        />

</layer-list>