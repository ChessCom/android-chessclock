<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item >
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <solid android:color="@color/orange" />

            <stroke
                android:width="1px"
                android:color="@color/dark_orange" />
        </shape>
    </item>
	<!--Shadows-->

	<!--left-->
	<item >
		<shape android:dither="true">
			<gradient
					android:startColor="@android:color/transparent"
					android:centerColor="@android:color/transparent"
					android:endColor="@color/shadow_border"
					android:angle="180"
					android:centerX="95%"
					android:centerY="0"
					/>
		</shape>
	</item>
	<!--bottom-->
	<item >
		<shape android:dither="true">
			<gradient
					android:startColor="@android:color/transparent"
					android:centerColor="@android:color/transparent"
					android:endColor="@color/shadow_border"
					android:angle="270"
					android:centerX="50%"
					android:centerY="95%"

					/>
		</shape>
	</item>

</layer-list>