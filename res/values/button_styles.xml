        <item name="btn_radius">0dip</item>
        <item name="btn_use_border">false</item>
        <item name="btn_bevel_lvl">1</item>
        <item name="btn_is_rect">true</item>

        <item name="btn_top">@color/transparent_button</item>
        <item name="btn_left">@color/transparent_button</item>
        <item name="btn_right">@color/transparent_button_border_right</item>
        <item name="btn_bottom">@color/transparent_button_border_bottom</item>

        <item name="btn_top_2">@color/transparent_button_border_top_2</item>
        <item name="btn_left_2">@color/transparent_button_border_left_2</item>
        <item name="btn_right_2">@color/transparent_button_border_right_2</item>
        <item name="btn_bottom_2">@color/transparent_button_border_bottom_2</item>

        <item name="btn_solid">@color/transparent_button</item>
    </style>

