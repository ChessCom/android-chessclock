<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TimersTheme" parent="ImmersiveStickyTheme">
        <item name="colorPrimary">@color/gray_controls</item>
        <item name="colorPrimaryDark">@color/gray_controls</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ImmersiveTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/gray_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ImmersiveStickyTheme" parent="ImmersiveTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>