<resources>

    <!-- The theme applied to the application or activity -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/gray_controls</item>
        <item name="colorPrimaryDark">@color/gray_controls</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:actionModeStyle">@style/ActionModeStyle</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_checkmark_white</item>
        <item name="android:windowBackground">@color/gray_background</item>

        <item name="actionModeCloseDrawable">@drawable/ic_checkmark_white</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>

    <!-- No Action bar Theme -->
    <style name="TimersTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/gray_controls</item>
        <item name="colorPrimaryDark">@color/gray_controls</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="WhiteButtonsDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_popup</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Theme.AppCompat">
        <item name="android:titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title
        </item>
        <item name="android:height">?actionBarSize</item>

        <item name="titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
        <item name="height">?actionBarSize</item>
    </style>

    <style name="FilledEditTextTheme" parent="Theme.MaterialComponents">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="timeInputEditTextStyle">
        <item name="android:background">@color/black</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:maxLength">2</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="timeInputEditTextStyleLarge" parent="timeInputEditTextStyle">
        <item name="android:background">@color/black</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/clock_timer_adjust_time_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">@dimen/clock_timer_adjust_time_input_min_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:maxLength">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/green</item>
        <item name="tabIndicatorHeight">1.5dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIconTint">@color/white_20</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white_50</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.DialogFullScreen" />

    <style name="AppTheme.DialogFullScreen.Slide">
        <item name="android:windowAnimationStyle">@style/DialogAnimations</item>
    </style>

    <style name="DialogAnimations">
        <item name="android:windowEnterAnimation">@anim/right_to_left_full</item>
        <item name="android:windowExitAnimation">@anim/left_to_right_full</item>
    </style>

    <style name="timeColonTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_small</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/white_85</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">@string/colon</item>
    </style>

    <declare-styleable name="StyledButton">
        <attr name="android:text" />
    </declare-styleable>
</resources>