<resources>

    <!-- The theme applied to the application or activity -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/NormalActionBar</item>
        <item name="android:actionModeStyle">@style/CABStyle</item>
        <item name="android:actionModeBackground">@color/bg_settings_cab</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_accept_light</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="actionBarStyle">@style/NormalActionBar</item>
        <item name="actionModeBackground">@color/bg_settings_cab</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_accept_light</item>
        <item name="actionModeStyle">@style/CABStyle</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!-- No Action bar Theme -->
    <style name="TimersTheme" parent="@style/Theme.AppCompat" />

    <style name="ConfirmationDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="NormalActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/NormalActionBarTitleText</item>
        <item name="android:background">@color/toolbar_gray</item>

        <item name="titleTextStyle">@style/NormalActionBarTitleText</item>
        <item name="background">@color/toolbar_gray</item>
    </style>

    <!-- ActionBar title text -->
    <style name="NormalActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--<style name="CABStyle" parent="@style/Theme.Base.AppCompat.Light.DarkActionBar">-->
    <style name="CABStyle" parent="@style/Theme.AppCompat">
        <item name="android:background">@color/bg_settings_cab</item>
        <item name="android:titleTextStyle">@style/CABTextStyle</item>

        <item name="background">@color/bg_settings_cab</item>
        <item name="titleTextStyle">@style/CABTextStyle</item>
    </style>

    <style name="CABTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuTextStyle" parent="@style/Theme.AppCompat">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="timeInputEditTextStyle">
        <item name="android:background">@color/black</item>
        <item name="android:inputType">number</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:maxLength">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/green</item>
        <item name="tabIndicatorHeight">1.5dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIconTint">@color/white_20</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white_50</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.DialogFullScreen" />

    <!-- Custom Attributes of TimePickerView compound view-->
    <declare-styleable name="TimePickerCompoundView">
        <attr name="type">
            <enum name="minute_second" value="0" />
            <enum name="hour_minute_second" value="1" />
        </attr>
        <attr name="hour" format="integer" />
        <attr name="minute" format="integer" />
        <attr name="second" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomCheckedTextView">
        <attr name="position">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="checked" format="boolean" />
        <attr name="checkMark" format="reference" />
        <attr name="drawablePadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="StyledButton">
        <attr name="android:text" />
    </declare-styleable>
</resources>